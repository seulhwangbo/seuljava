package ch04_ex02;
//homework4
//swithch와 if 둘 다 사용 가능하다
import java.io.IOException;

public class WhileKeyControlEx {

	public static void main(String[] args) throws IOException {
		boolean run 	= true; //지시가 없으면 무한 로프가 될 수밖에 없다.
		int		speed 	= 0;
		int		keyCode = 0;
		
		while(run) {
			if(keyCode!=13 && keyCode !=10) {
				System.out.println("-----------------------");
				System.out.println("1.증속 | 2. 감속 | 3. 중지");
				System.out.println("-----------------------");
				System.out.print("선택: ");
				switch(keyCode) {
				case '1' : speed= ++speed;
				System.out.println("현재 속도: "+ speed);
				keyCode = '0';
				break;
				case '2' : speed= --speed;
				System.out.println("현재 속도: " + speed);
				break;
				case '3' : run = false;
				break;
				}
				keyCode = System.in.read();
				
			
			
		//	System.out.println("keyCode->"+keyCode);
				
			
//			선택: 1
//			keyCode->49
//			결과 speed +1 + 보여줘
//			선택: 2
//			keyCode->50
//			결과 speed -1
//			선택: 3
//			keyCode->51
//			결과 run = false
			
//			선택: 1
//			keyCode->49
//          결과 	1) speed + 1
//			    2) 보여줘	[ 현재 속도=" + speed ]
//			2
//			keyCode->50
//          결과 1) speed - 1		
//		        2) 보여줘	[ 현재 속도=" + speed ]

//			3
//			keyCode->51
//          결과  run = false
//               Escape
			
// 0
		}
		}	
	System.out.println("PGM The End");		
	}
	
	}