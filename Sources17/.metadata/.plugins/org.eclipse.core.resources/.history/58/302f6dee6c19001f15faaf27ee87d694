package ch04_ex01;
// 현장work
public class If04 {

	public static void main(String[] args) {
		int score = Integer.parseInt(args[0]);
		String grade = "";
		
		if(score>=90){
			if(score>97) {
				grade = "A+";
		} else if(score<94) {
				grade = "A-";
		} else {
				grade = "A0";
			}
		} else if(score>=80){
			if(score>87) {
				grade = "B+";
		} else if(score<84) {
				grade = "B-";
		} else {
				grade = "B0";
		} 
			
		}
		 else if(score>=70){
			if(score>77) {
				grade = "C+";
		} else if(score<74) {
				grade = "C-";
		} else {
				grade = "C0";
		} 
		}
				
		 else{	grade = "권총";	
		 }
		
		System.out.println("당신의 점수는 " + score + " 당신의 등급은 " + grade + " 입니다.");
		
		// if else if else if grade ==> 97 이상 a+ ==> 97>=a0>94 -> 94>a- 
		// if(score>=90) 		grade = "A";
		//else if(score>=80)  grade = "B";
		//else if(score>=70)  grade = "C";
		//else				grade = "권총";

	}

}
