package study0523;

public class ifexex {

	public static void main(String[] args) {
	//if절을 통해서 양수인지 음수인지 판별하는 식을 만들어라
		int a = 10;
		int b = -13;
		
		if(a>=0) {
			System.out.println("a는 양수입니다.");
		} else {
			System.out.println("a는 음수입니다.");
		}
		
		if(b<=0) {
			System.out.println("b는 음수입니다.");
		} else {
			System.out.println("b는 양수입니다");
		}

	}

}
